---
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}

const { title, subtitle, class: className = '' } = Astro.props;
---

<div class={`mb-8 ${className}`}>
  <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">{title}</h2>
  {subtitle && <p class="text-lg text-gray-600">{subtitle}</p>}
</div>

