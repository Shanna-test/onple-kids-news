---
interface Props {
  text: string;
  variant?: 'primary' | 'secondary' | 'gray';
  class?: string;
}

const { text, variant = 'primary', class: className = '' } = Astro.props;

const variantClasses = {
  primary: 'bg-primary-100 text-primary-700',
  secondary: 'bg-gray-100 text-gray-700',
  gray: 'bg-gray-200 text-gray-800',
};
---

<span class={`inline-block text-xs font-semibold px-3 py-1 rounded-full ${variantClasses[variant]} ${className}`}>
  {text}
</span>

